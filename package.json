{
  "name": "electron-firebase",
  "productName": "Electron-Firebase Quickstart Framework",
  "version": "1.2.0",
  "description": "framework for building firebase cloud authentication and database in an electron app",
  "main": "electron-firebase.js",
  "config": {
    "loglevel": "error"
  },
  "scripts": {
    "preinstall": "node ./install_app/preinstall.js",
    "postinstall": "node --trace-warnings --trace-deprecation ./install_app/postinstall.js",
    "start": "electron ./main.js",
    "test": "electron ./tests/main_test_all.js",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "gendocs": "node ./developer/gendocs.js",
    "deploy": "node ./config/firebase-deploy.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron-store": "^8.0.0",
    "express": "^4.17.1",
    "fast-crc32c": "^2.0.0",
    "firebase": "^8.5.0",
    "firebaseui": "^4.8.0",
    "helmet": "^4.6.0",
    "keytar": "^7.7.0",
    "node-machine-id": "^1.1.12",
    "selfsigned": "^1.10.11",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.4",
    "electron": "^12.0.7",
    "electron-rebuild": "^2.3.5",
    "firebase-tools": "^9.10.2",
    "jsdoc-to-markdown": "^7.0.0",
    "node-gyp": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/david-asher/electron-firebase.git"
  },
  "keywords": [
    "electron",
    "firebase",
    "authentication",
    "oauth"
  ],
  "author": "David Asher",
  "license": "MIT",
  "files": [
    "functions",
    "install_app",
    "lib",
    "pages",
    "scripts",
    "config",
    ".firebaserc",
    "firebase.json",
    "answerBrowser.js",
    "electron-firebase.js",
    "main.js",
    "setupApp.js"
  ]
}
